/* Configuración del parser para Gramática No.3 */
/* Sigue la gramática SLR: */
/* E → T + E | T */
/* T → NUMBER * T | NUMBER | ( E ) */

%token NUMBER
%token PLUS
%token TIMES
%token LPAREN RPAREN
%token WHITESPACE
%token SEMICOLON 
IGNORE WHITESPACE

general : general SEMICOLON expression | expression ; 

expression:
    term PLUS expression
  | term
;
term:
    NUMBER TIMES term
  | NUMBER
  | LPAREN expression RPAREN
;