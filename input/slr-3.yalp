/* === Gram√°tica No.3 (Corregida para SLR) === */

%token NUMBER
%token PLUS
%token TIMES
%token LPAREN RPAREN
%token SEMICOLON
%token WHITESPACE
IGNORE WHITESPACE

%start input

%%

input:
    general SEMICOLON
;

general:
    general SEMICOLON expression
  | expression
;

expression:
    expression PLUS term
  | term
;
term:
    term TIMES factor
  | factor
;

factor:
    NUMBER
  | LPAREN expression RPAREN
;